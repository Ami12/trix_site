    <script>
        // Enhanced Intersection Observer for scroll animations
        (function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');

                        // Trigger counter animations
                        const counters = entry.target.querySelectorAll('.counter');
                        counters.forEach(counter => {
                            if (!counter.classList.contains('counted')) {
                                animateCounter(counter);
                                counter.classList.add('counted');
                            }
                        });

                        // Trigger chart animation for pilot results
                        if (entry.target.classList.contains('pilot-results')) {
                            setTimeout(() => {
                                animateChart(entry.target);
                            }, 300);
                        }
                    }
                });
            }, observerOptions);

            // Observe all animated elements
            document.querySelectorAll('.scroll-reveal, .scroll-reveal-left, .scroll-reveal-scale, .features-title, .feature-card, .pilot-results, .cta-container, #testimony img').forEach(el => {
                observer.observe(el);
            });

            // Add stagger class to containers
            document.querySelectorAll('.features-grid').forEach(grid => {
                grid.classList.add('stagger-container');
                observer.observe(grid);
            });
        })();

        // Counter animation function
        function animateCounter(element) {
            const start = parseInt(element.dataset.start) || 0;
            const end = parseInt(element.dataset.end) || parseInt(element.textContent);
            const isStatic = element.dataset.static === 'true';
            const duration = 2000;
            const startTime = performance.now();

            if (isStatic) {
                element.textContent = end;
                return;
            }

            function updateCounter(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);

                // Easing function for smooth animation
                const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                const current = Math.floor(start + (end - start) * easeOutQuart);

                element.textContent = current;
                element.classList.add('counting');

                if (progress < 1) {
                    requestAnimationFrame(updateCounter);
                } else {
                    element.textContent = end;
                    element.classList.remove('counting');
                }
            }

            requestAnimationFrame(updateCounter);
        }

        // Animate chart bars with counter
        function animateChart(chartElement) {
            const values = chartElement.querySelectorAll('.bar-value');
            values.forEach((value, index) => {
                const targetValue = parseInt(value.dataset.value);
                let current = 0;
                const increment = targetValue / 50;
                const delay = index * 200;

                setTimeout(() => {
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= targetValue) {
                            value.textContent = targetValue;
                            clearInterval(timer);
                        } else {
                            value.textContent = Math.floor(current);
                        }
                    }, 30);
                }, delay);
            });
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href !== '#') {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });

        // Add hover ripple effect to buttons
        document.querySelectorAll('.btn-primary, .btn-secondary').forEach(button => {
            button.addEventListener('mouseenter', function(e) {
                const rect = this.getBoundingClientRect();
                const ripple = document.createElement('span');
                ripple.classList.add('ripple-hover');
                ripple.style.left = (e.clientX - rect.left) + 'px';
                ripple.style.top = (e.clientY - rect.top) + 'px';
                this.appendChild(ripple);

                setTimeout(() => {
                    ripple.remove();
                }, 1000);
            });
        });

        // Parallax effect for hero section
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('#schools-hero');
            if (hero) {
                hero.style.transform = `translateY(${scrolled * 0.3}px)`;
            }
        });

        // Original functionality - alternating secondary buttons
        (function() {
            try {
                var next = (localStorage.getItem('altSecondaryNext') || 'whatsapp') === 'whatsapp' ? 'whatsapp' : 'phone';
                var showWhatsApp = (next === 'whatsapp');
                document.querySelectorAll('.cta-container[data-alt-secondary-group]').forEach(function(container) {
                    var opts = container.querySelectorAll('.alt-secondary.alt-option');
                    opts.forEach(function(el) {
                        var isWhatsApp = el.getAttribute('data-alt') === 'whatsapp';
                        el.style.display = (isWhatsApp === showWhatsApp) ? 'inline-block' : 'none';
                    });
                });
                localStorage.setItem('altSecondaryNext', showWhatsApp ? 'phone' : 'whatsapp');
            } catch(e) {
                document.querySelectorAll('.alt-secondary.alt-option').forEach(function(el) {
                    el.style.display = (el.getAttribute('data-alt') === 'whatsapp') ? 'inline-block' : 'none';
                });
            }
        })();

        // Modal functionality (preserved from original)
        (function() {
            var overlay = document.getElementById('program-modal');
            var bodyEl  = document.getElementById('program-modal-body');
            var titleEl = document.getElementById('program-modal-title');
            var tmplRoot= document.getElementById('program-templates');

            function openModal(programId, titleText) {
                var tmpl = tmplRoot?.querySelector('[data-program-template="' + programId + '"]');
                if (!tmpl) return;
                titleEl.textContent = titleText || 'פרטי התוכנית';
                bodyEl.innerHTML = tmpl.innerHTML;
                overlay.style.display = 'flex';
                document.documentElement.classList.add('no-scroll');
            }

            function closeModal() {
                if (overlay) overlay.style.display = 'none';
                if (bodyEl) bodyEl.innerHTML = '';
                document.documentElement.classList.remove('no-scroll');
            }

            document.addEventListener('click', function(ev) {
                var a = ev.target.closest('a[data-cta="program-details"]');
                if (a) {
                    ev.preventDefault();
                    var pid = a.getAttribute('data-program');
                    var ttl = a.closest('section')?.querySelector('.features-title, h3')?.textContent?.trim();
                    openModal(pid, ttl);
                }
                if (ev.target.matches('.lead-close') || ev.target.hasAttribute('data-close') || ev.target === overlay) {
                    closeModal();
                }
            });

            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') closeModal();
            });
        })();

        // Add loading class when page loads
        window.addEventListener('load', () => {
            document.body.classList.add('loaded');

            // Trigger initial animations
            setTimeout(() => {
                document.querySelectorAll('.hero h1, .hero .subtitle, .code-strip').forEach(el => {
                    el.style.animationPlayState = 'running';
                });
            }, 100);
        });

        // Performance optimization - lazy load images
        if ('IntersectionObserver' in window) {
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        img.classList.add('visible');
                        observer.unobserve(img);
                    }
                });
            });

            document.querySelectorAll('img').forEach(img => {
                imageObserver.observe(img);
            });
        }
    </script>

