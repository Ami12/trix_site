}

@section Styles {
    <style>
        /* Professional animations for schools */
        :root {
            --school-blue: #2563eb;
            --school-green: #059669;
            --school-purple: #7c3aed;
            --school-orange: #ea580c;
            --school-gray: #6b7280;
            --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Base animations */
        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes slideInLeft {
            from

        {
            opacity: 0;
            transform: translateX(50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes scaleIn {
            from

        {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.02);
        }

        }

        @@keyframes countUp {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Hero section enhanced */
        #schools-hero {
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, #f0f9ff 0%, #ffffff 50%, #f8fafc 100%);
        }

            #schools-hero::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(37, 99, 235, 0.03) 0%, transparent 50%);
                animation: rotate 30s linear infinite;
            }

        @@keyframes rotate {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }

        }

        #schools-hero h1 {
            opacity: 0;
            animation: fadeInUp 0.8s ease-out forwards;
            background: linear-gradient(135deg, var(--school-blue), var(--school-purple));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
        }

        #schools-hero .subtitle {
            opacity: 0;
            animation: fadeInUp 0.8s ease-out 0.2s forwards;
        }

        /* Trust bar enhanced */
        .code-strip {
            opacity: 0;
            animation: scaleIn 0.8s ease-out 0.4s forwards;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .code-strip:hover {
                transform: scale(1.02);
            }

            .code-strip::after {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.1), transparent);
                animation: shimmer 3s infinite;
            }

        @@keyframes shimmer {
            0%

        {
            left: -100%;
        }

        100% {
            left: 100%;
        }

        }

        /* Features section enhanced */
        .features {
            position: relative;
        }

        .features-title {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.6s var(--transition-smooth);
        }

            .features-title.visible {
                opacity: 1;
                transform: translateY(0);
            }

        /* Feature cards with stagger animation */
        .features-grid {
            display: grid;
            gap: 32px;
        }

        .feature-card {
            opacity: 0;
            transform: translateY(30px) scale(0.98);
            transition: all 0.6s var(--transition-smooth);
            position: relative;
            overflow: hidden;
        }

            .feature-card.visible {
                opacity: 1;
                transform: translateY(0) scale(1);
            }

            .feature-card::before {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                right: -2px;
                bottom: -2px;
                background: linear-gradient(45deg, var(--school-blue), var(--school-green), var(--school-purple));
                border-radius: 16px;
                opacity: 0;
                z-index: -1;
                transition: opacity 0.3s ease;
            }

            .feature-card:hover::before {
                opacity: 0.1;
            }

            .feature-card:hover {
                transform: translateY(-5px) scale(1.02);
                box-shadow: 0 20px 40px rgba(0,0,0,0.12);
            }

            .feature-card h4 {
                color: var(--text-dark);
                transition: color 0.3s ease;
                position: relative;
            }

            .feature-card:hover h4 {
                color: var(--school-blue);
            }

            .feature-card h4::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--school-blue);
                transition: width 0.3s ease;
            }

            .feature-card:hover h4::after {
                width: 100%;
            }

        /* Pilot results enhanced */
        .pilot-results {
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            margin: 32px auto;
            max-width: 600px;
            opacity: 0;
            transform: scale(0.9);
            transition: all 0.8s var(--transition-smooth);
            position: relative;
            overflow: hidden;
        }

            .pilot-results.visible {
                opacity: 1;
                transform: scale(1);
            }

            .pilot-results::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--school-blue), var(--school-green), var(--school-purple));
                animation: gradientMove 3s linear infinite;
            }

        @@keyframes gradientMove {
            0%

        {
            background-position: 0% 50%;
        }

        100% {
            background-position: 100% 50%;
        }

        }

        .pilot-title {
            font-size: 24px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 30px;
            text-align: center;
        }

        /* Chart animation */
        .chart-container {
            display: flex;
            align-items: flex-end;
            justify-content: center;
            gap: 60px;
            height: 250px;
            position: relative;
        }

        .bar {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            position: relative;
        }

        .bar-fill {
            width: 100px;
            background: linear-gradient(180deg, #3B82F6, #2563eb);
            border-radius: 8px 8px 0 0;
            transition: height 1.5s var(--transition-smooth);
            position: relative;
            overflow: hidden;
        }

        .bar:first-child .bar-fill {
            height: 0;
            background: linear-gradient(180deg, #94a3b8, #64748b);
        }

        .bar:last-child .bar-fill {
            height: 0;
            background: linear-gradient(180deg, var(--school-green), #059669);
        }

        .pilot-results.visible .bar:first-child .bar-fill {
            height: 40px;
        }

        .pilot-results.visible .bar:last-child .bar-fill {
            height: 230px;
        }

        .bar-fill::after {
            content: '';
            position: absolute;
            top: -100%;
            left: 0;
            right: 0;
            height: 100%;
            background: linear-gradient(180deg, rgba(255,255,255,0.3), transparent);
            animation: fillShine 2s ease-in-out infinite;
        }

        @@keyframes fillShine {
            0%, 100%

        {
            top: 100%;
        }

        50% {
            top: -100%;
        }

        }

        .bar-label {
            font-size: 16px;
            color: var(--text-gray);
            font-weight: 600;
        }

        .bar-value {
            font-size: 28px;
            font-weight: 800;
            color: var(--text-dark);
            opacity: 0;
        }

        .pilot-results.visible .bar-value {
            animation: countUp 0.5s ease-out 1.5s forwards;
        }

        .bar-value.counting {
            animation: pulse 0.3s ease-out;
        }

        /* CTA buttons enhanced */
        .cta-container {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.6s var(--transition-smooth);
            transition-delay: 0.3s;
        }

            .cta-container.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .btn-primary, .btn-secondary {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            transform-style: preserve-3d;
        }

            .btn-primary::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.3);
                transform: translate(-50%, -50%);
                transition: width 0.6s, height 0.6s;
            }

            .btn-primary:hover::before {
                width: 300px;
                height: 300px;
            }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(39, 174, 96, 0.3);
            }

        .btn-secondary {
            background: var(--white);
            border: 2px solid var(--school-blue);
            color: var(--school-blue);
        }

            .btn-secondary:hover {
                background: var(--school-blue);
                color: var(--white);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(37, 99, 235, 0.2);
            }

        /* Testimony section enhanced */
        #testimony .way-description {
            font-size: 18px;
            line-height: 1.8;
            position: relative;
            padding-right: 40px;
        }

            #testimony .way-description::before {
                content: '"';
                position: absolute;
                right: 0;
                top: -10px;
                font-size: 48px;
                color: var(--school-blue);
                opacity: 0.2;
            }

        #testimony img {
            opacity: 0;
            transform: scale(0.95);
            transition: all 0.8s var(--transition-smooth);
        }

            #testimony img.visible {
                opacity: 1;
                transform: scale(1);
            }

            #testimony img:hover {
                transform: scale(1.02);
                box-shadow: 0 15px 40px rgba(0,0,0,0.15);
            }

        /* Final CTA enhanced */
        .final-cta-schools {
            background: linear-gradient(135deg, var(--school-blue), var(--school-purple));
            color: var(--white);
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

            .final-cta-schools::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 50%);
                animation: rotate 20s linear infinite;
            }

        .final-cta-title {
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 16px;
            opacity: 0;
            animation: fadeInUp 0.8s ease-out forwards;
        }

        .final-cta-text {
            font-size: 24px;
            opacity: 0.95;
            margin-bottom: 40px;
            opacity: 0;
            animation: fadeInUp 0.8s ease-out 0.2s forwards;
        }

        /* Scroll reveal classes */
        .scroll-reveal {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s var(--transition-smooth);
        }

            .scroll-reveal.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .scroll-reveal-left {
            opacity: 0;
            transform: translateX(-30px);
            transition: all 0.8s var(--transition-smooth);
        }

            .scroll-reveal-left.visible {
                opacity: 1;
                transform: translateX(0);
            }

        .scroll-reveal-scale {
            opacity: 0;
            transform: scale(0.9);
            transition: all 0.8s var(--transition-smooth);
        }

            .scroll-reveal-scale.visible {
                opacity: 1;
                transform: scale(1);
            }

        /* Stagger animations for multiple elements */
        .stagger-item {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s var(--transition-smooth);
        }

        .stagger-container.visible .stagger-item:nth-child(1) {
            transition-delay: 0.1s;
        }

        .stagger-container.visible .stagger-item:nth-child(2) {
            transition-delay: 0.2s;
        }

        .stagger-container.visible .stagger-item:nth-child(3) {
            transition-delay: 0.3s;
        }

        .stagger-container.visible .stagger-item:nth-child(4) {
            transition-delay: 0.4s;
        }

        .stagger-container.visible .stagger-item {
            opacity: 1;
            transform: translateY(0);
        }

        /* Number counter animation */
        .counter {
            display: inline-block;
            font-weight: bold;
            color: var(--school-green);
        }

        /* Link hover effects */
        a[asp-controller] {
            color: var(--school-blue);
            text-decoration: none;
            position: relative;
            transition: color 0.3s ease;
            font-weight: 600;
        }

            a[asp-controller]::after {
                content: '←';
                margin-right: 5px;
                display: inline-block;
                transition: transform 0.3s ease;
            }

            a[asp-controller]:hover::after {
                transform: translateX(-5px);
            }

            a[asp-controller]:hover {
                color: var(--school-purple);
            }

        /* Loading shimmer effect */
        @@keyframes loadingShimmer {
            0%

        {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }

        }

        .loading-shimmer {
            background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.4) 50%, transparent 100%);
            background-size: 200% 100%;
            animation: loadingShimmer 2s infinite;
        }

        /* Floating animation */
        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        .float {
            animation: float 3s ease-in-out infinite;
        }

        /* Responsive adjustments */
        @@mediadia (max-width: 768px) {
            #schools-hero h1

        {
            font-size: 32px;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }

        .chart-container {
            gap: 40px;
        }

        .bar-fill {
            width: 80px;
        }

        .final-cta-title {
            font-size: 36px;
        }

        }

        /* Accessibility improvements */
        @@mediadia (prefers-reduced-motion: reduce) {
            *, *::before, *::after

        {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }

        }

        /* Print styles */
        @@mediadia print {
            .cta-container

        {
            display: none;
        }

        * {
            animation: none !important;
            transition: none !important;
        }

        }
    </style>
}

