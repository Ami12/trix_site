@{
    ViewData["Title"] = "12trix - מתמטיקה מדידה ומהנה";
}


@section Styles {
<style>
:root {
            --green-primary: #27AE60;
            --green-secondary: #f6fff9;
            --blue-accent: #2E86DE; /* צבע שלישי לאקצנטים */
            --orange-accent: #FF6B6B; /* צבע נוסף לדגשים */
            --red-plus: #E44B4B;
            --orange-minus: #F39C12;
            --green-multiply: #2ECC71;
            --text-dark: #2C3E50; /* כהה יותר לקונטרסט טוב יותר */
            --text-gray: #7F8C8D;
            --bg-light: #F7F8FA;
            --white: #FFFFFF;
            --shadow-card: 0 10px 30px rgba(0,0,0,0.1);
            --shadow-hover: 0 20px 40px rgba(0,0,0,0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Heebo', sans-serif;
            color: var(--text-dark);
            line-height: 1.7;
            background: var(--white);
            direction: rtl;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

        /* Header משופר */
        header {
            background: var(--white);
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            position: sticky;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 0;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 24px;
            font-weight: 800;
            color: var(--green-primary);
            transition: transform 0.3s ease;
        }

            .logo:hover {
                transform: scale(1.05);
            }

        .nav-menu {
            display: flex;
            gap: 32px;
            list-style: none;
        }

            .nav-menu a {
                text-decoration: none;
                color: var(--text-dark);
                font-weight: 600;
                position: relative;
                transition: color 0.3s;
            }

                .nav-menu a::after {
                    content: '';
                    position: absolute;
                    bottom: -5px;
                    left: 0;
                    width: 0;
                    height: 3px;
                    background: var(--green-primary);
                    transition: width 0.3s ease;
                }

                .nav-menu a:hover::after {
                    width: 100%;
                }

                .nav-menu a:hover {
                    color: var(--green-primary);
                }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .whatsapp-link {
            display: flex;
            align-items: center;
            transition: transform 0.3s;
        }

            .whatsapp-link:hover {
                transform: scale(1.15) rotate(10deg);
            }

        .login-btn {
            background: linear-gradient(135deg, var(--green-primary), var(--blue-accent));
            color: var(--white);
            padding: 10px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 700;
            font-size: 15px;
            transition: all 0.3s;
            white-space: nowrap;
            box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
        }

            .login-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(39, 174, 96, 0.4);
            }

        /* Hero Section משופר */
        .hero {
            background: linear-gradient(135deg, #F7F8FA 0%, #FFFFFF 50%, #e8f5e9 100%);
            padding: 80px 0;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -10%;
                width: 500px;
                height: 500px;
                background: radial-gradient(circle, rgba(39, 174, 96, 0.1) 0%, transparent 70%);
                border-radius: 50%;
                animation: float 20s ease-in-out infinite;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-30px) rotate(180deg);
            }
        }

        h1 {
            font-size: 56px;
            font-weight: 900;
            color: var(--text-dark);
            margin-bottom: 20px;
            line-height: 1.2;
            letter-spacing: -1px;
        }

        .subtitle {
            font-size: 22px;
            color: var(--text-gray);
            margin-bottom: 40px;
            font-weight: 500;
        }

        /* Pilot Results משופר */
        .pilot-results {
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: var(--shadow-card);
            margin: 40px auto;
            max-width: 600px;
            position: relative;
            transition: transform 0.3s ease;
        }

            .pilot-results:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

            .pilot-results img {
                max-width: 100%;
                height: auto;
                filter: drop-shadow(0 10px 20px rgba(0,0,0,0.1));
            }

        /* CTA Buttons משופרים עם אנימציות */
        .cta-container {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin: 40px 0;
            flex-wrap: wrap;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--green-primary), #219a52);
            color: var(--white);
            padding: 18px 36px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 700;
            font-size: 18px;
            transition: all 0.3s ease;
            display: inline-block;
            box-shadow: 0 6px 20px rgba(39, 174, 96, 0.4);
            position: relative;
            overflow: hidden;
        }

            .btn-primary::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.3);
                transform: translate(-50%, -50%);
                transition: width 0.6s, height 0.6s;
            }

            .btn-primary:hover::before {
                width: 300px;
                height: 300px;
            }

            .btn-primary:hover {
                transform: translateY(-3px) scale(1.02);
                box-shadow: 0 10px 30px rgba(39, 174, 96, 0.5);
            }

        .btn-secondary {
            background: var(--white);
            color: var(--green-primary);
            padding: 18px 36px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 700;
            font-size: 18px;
            border: 3px solid var(--green-primary);
            transition: all 0.3s ease;
            display: inline-block;
            position: relative;
            overflow: hidden;
        }

            .btn-secondary::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: var(--green-primary);
                transition: left 0.3s ease;
                z-index: -1;
            }

            .btn-secondary:hover::before {
                left: 0;
            }

            .btn-secondary:hover {
                color: var(--white);
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(39, 174, 96, 0.3);
            }

        /* Target Sections משופר */
        .target-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin: 80px 0;
        }

        .target-card {
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: var(--shadow-card);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .target-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, var(--green-primary), var(--blue-accent));
            }

            .target-card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-hover);
            }

            .target-card h3 {
                font-size: 26px;
                font-weight: 800;
                color: var(--text-dark);
                margin-bottom: 20px;
            }

            .target-card p {
                color: var(--text-gray);
                margin-bottom: 30px;
                line-height: 1.8;
                font-size: 17px;
            }

        /* Features Grid משופר */
        .features {
            background: linear-gradient(135deg, var(--bg-light) 0%, #ffffff 100%);
            padding: 80px 0;
            margin: 80px 0;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
        }

        .feature-card {
            background: var(--white);
            padding: 32px;
            border-radius: 20px;
            text-align: center;
            box-shadow: var(--shadow-card);
            transition: all 0.3s ease;
            position: relative;
        }

            .feature-card::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--green-primary), var(--blue-accent));
                transition: width 0.3s ease;
            }

            .feature-card:hover::after {
                width: 80%;
            }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-hover);
            }

            .feature-card h4 {
                font-size: 22px;
                font-weight: 700;
                color: var(--text-dark);
                margin-bottom: 16px;
            }

            .feature-card p {
                color: var(--text-gray);
                font-size: 16px;
                line-height: 1.7;
            }

        /* Testimonials משופר עם כוכבים */
        .testimonials {
            background: linear-gradient(135deg, var(--bg-light) 0%, #e8f5e9 100%);
            padding: 80px 0;
        }

        .testimonials-title {
            text-align: center;
            font-size: 42px;
            font-weight: 800;
            margin-bottom: 60px;
            color: var(--text-dark);
        }

        .testimonial-card {
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-card);
            position: relative;
            transition: all 0.3s ease;
        }

            .testimonial-card:hover {
                transform: translateX(-10px);
                box-shadow: var(--shadow-hover);
            }

            .testimonial-card::before {
                content: '"';
                position: absolute;
                top: 20px;
                right: 30px;
                font-size: 60px;
                color: var(--green-primary);
                opacity: 0.2;
                font-weight: 900;
            }

        .rating {
            color: #FFD700;
            font-size: 20px;
            margin-bottom: 16px;
        }

        .testimonial-text {
            font-size: 18px;
            line-height: 1.9;
            color: var(--text-dark);
            margin-bottom: 24px;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .author-avatar {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--green-primary), var(--blue-accent));
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .author-info {
            flex: 1;
        }

        .author-name {
            font-weight: 700;
            color: var(--text-dark);
            font-size: 18px;
        }

        .author-role {
            font-size: 15px;
            color: var(--text-gray);
            margin-top: 4px;
        }

        /* Carousel משופר */
        .carousel-container {
            position: relative;
            max-width: 800px;
            margin: 0 auto;
            overflow: hidden;
        }

        .carousel-slide {
            min-width: 100%;
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: var(--shadow-card);
            text-align: center;
            display: none;
            transition: all 0.3s ease;
        }

            .carousel-slide.active {
                display: block;
                animation: slideIn 0.5s ease;
            }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(30px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .carousel-slide img {
            width: 100%;
            max-width: 500px;
            height: 300px;
            object-fit: contain;
            border-radius: 16px;
            margin: 0 auto 30px;
            transition: transform 0.3s ease;
        }

        .carousel-slide:hover img {
            transform: scale(1.05);
        }

        .carousel-slide h5 {
            font-size: 26px;
            font-weight: 700;
            color: var(--text-dark);
        }

        .carousel-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: var(--white);
            border: 3px solid var(--green-primary);
            color: var(--green-primary);
            width: 52px;
            height: 52px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 2;
            font-weight: bold;
        }

            .carousel-btn:hover {
                background: var(--green-primary);
                color: var(--white);
                transform: translateY(-50%) scale(1.1);
            }

        .carousel-prev {
            left: 10px;
        }

        .carousel-next {
            right: 10px;
        }

        .carousel-dots {
            display: flex;
            justify-content: center;
            gap: 14px;
            margin-top: 30px;
        }

        .dot {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: var(--text-gray);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .dot.active {
                background: var(--green-primary);
                width: 36px;
                border-radius: 7px;
            }

            .dot:hover {
                background: var(--blue-accent);
            }

        /* Final CTA משופר */
        .final-cta {
            text-align: center;
            padding: 100px 0;
            background: linear-gradient(135deg, var(--green-primary) 0%, var(--blue-accent) 100%);
            color: var(--white);
            position: relative;
            overflow: hidden;
        }

            .final-cta::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -20%;
                width: 600px;
                height: 600px;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                animation: float 25s ease-in-out infinite reverse;
            }

            .final-cta h2 {
                font-size: 48px;
                font-weight: 900;
                margin-bottom: 20px;
                position: relative;
                z-index: 1;
            }

            .final-cta p {
                font-size: 22px;
                margin-bottom: 20px;
                opacity: 0.95;
                position: relative;
                z-index: 1;
            }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            h1 {
                font-size: 36px;
            }

            .nav-menu {
                display: none;
            }

            .nav-actions {
                gap: 12px;
            }

            .login-btn {
                padding: 10px 16px;
                font-size: 13px;
            }

            .cta-container {
                flex-direction: column;
                align-items: center;
            }

            .btn-primary, .btn-secondary {
                width: 100%;
                max-width: 320px;
            }

            .target-sections {
                grid-template-columns: 1fr;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .final-cta h2 {
                font-size: 32px;
            }
        }

        /* Mobile menu */
        .mobile-toggle {
            display: none;
            align-items: center;
            justify-content: center;
            width: 44px;
            height: 44px;
            border: 2px solid var(--green-primary);
            border-radius: 12px;
            background: var(--white);
            color: var(--green-primary);
            cursor: pointer;
            transition: all 0.2s;
        }

            .mobile-toggle:hover {
                background: var(--green-primary);
                color: var(--white);
            }

        .mobile-menu {
            display: none;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 12px;
            padding: 16px 24px;
            background: var(--white);
            border-top: 1px solid #eee;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }

            .mobile-menu a {
                display: block;
                text-decoration: none;
                text-align: center;
                padding: 12px 10px;
                border-radius: 12px;
                background: var(--bg-light);
                color: var(--text-dark);
                font-weight: 600;
                transition: all 0.3s ease;
            }

                .mobile-menu a:hover {
                    background: linear-gradient(135deg, var(--green-primary), var(--blue-accent));
                    color: var(--white);
                    transform: scale(1.05);
                }

                .mobile-menu a.login-btn {
                    background: var(--green-primary);
                    color: var(--white);
                    border: none;
                }

        @@media (max-width: 768px) {
            .nav-menu {
                display: none;
            }

            .nav-actions {
                display: none;
            }

            .mobile-toggle {
                display: flex;
            }

            .mobile-menu.active {
                display: grid;
            }
        }

        /* Divider משופר */
        .divider {
            border: none;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--text-gray), transparent);
            margin: 60px 0;
            opacity: 0.3;
        }

        /* Code Strip משופר */
        .code-strip {
            background: linear-gradient(135deg, var(--bg-light) 0%, #e8f5e9 100%);
            padding: 28px;
            text-align: center;
            border-radius: 20px;
            margin: 40px 0;
            border: 2px solid var(--green-primary);
            position: relative;
            overflow: hidden;
        }

            .code-strip::before {
                content: '✓';
                position: absolute;
                left: 30px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 24px;
                color: var(--green-primary);
                font-weight: bold;
            }

            .code-strip p {
                font-size: 18px;
                color: var(--text-dark);
                font-weight: 600;
            }

        /* Footer משופר */
        footer {
            background: var(--white);
            padding: 40px 0;
            text-align: center;
            border-top: 1px solid #eee;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 24px;
            color: var(--text-gray);
        }

            .footer-content a {
                color: var(--text-gray);
                text-decoration: none;
                transition: color 0.3s ease;
                font-weight: 500;
            }

                .footer-content a:hover {
                    color: var(--green-primary);
                }

        .fade-in {
            animation: fadeIn 0.8s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
</style>
}

