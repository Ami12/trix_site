@{
    ViewData["Title"] = "צור קשר";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .contact-hero {
            background: linear-gradient(135deg, var(--bg-light) 0%, #fff 100%);
            padding: 64px 0;
            text-align: center;
        }

            .contact-hero h1 {
                font-size: 42px;
                font-weight: 800;
                margin: 0 0 12px;
                color: var(--text-dark);
            }

            .contact-hero p {
                color: var(--text-gray);
                font-size: 18px;
            }

        .contact-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px,1fr));
            gap: 20px;
            margin: 28px auto 8px;
            max-width: 1000px;
        }

        .contact-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: var(--shadow-card);
            padding: 22px;
            display: flex;
            gap: 12px;
            align-items: flex-start;
        }

            .contact-card .icon {
                font-size: 26px;
                line-height: 1;
            }

            .contact-card h3 {
                margin: 0 0 4px;
                font-size: 18px
            }

            .contact-card p, .contact-card a {
                color: var(--text-dark);
            }

        .contact-wrap {
            max-width: 1000px;
            margin: 36px auto;
            display: grid;
            grid-template-columns: 1.1fr .9fr;
            gap: 28px;
        }

        .contact-form {
            background: #fff;
            border-radius: 16px;
            box-shadow: var(--shadow-card);
            padding: 22px;
        }

            .contact-form h2 {
                margin: 0 0 8px;
                font-size: 22px
            }

        .muted {
            color: #666;
            margin: 0 0 16px;
        }

        .lead-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

            .lead-grid label {
                display: flex;
                flex-direction: column;
                gap: 6px;
                font-weight: 600
            }

            .lead-grid input, .lead-grid textarea, .lead-grid select {
                border: 1px solid #ddd;
                border-radius: 10px;
                padding: 10px;
                font: inherit;
            }

        .lead-actions {
            display: flex;
            gap: 12px;
            margin-top: 8px
        }

        .lead-msg {
            margin-top: 8px;
            font-size: .95rem
        }

        .hp {
            position: absolute !important;
            left: -10000px !important;
            width: 1px !important;
            height: 1px !important;
            opacity: 0 !important
        }

        .map {
            background: #fff;
            border-radius: 16px;
            box-shadow: var(--shadow-card);
            overflow: hidden;
        }

            .map iframe {
                display: block;
                width: 100%;
                height: 100%;
                min-height: 420px;
                border: 0
            }

        @@@@media (max-width: 900px) {
            .contact-wrap {
                grid-template-columns: 1fr;
            }

            .lead-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<section class="contact-hero">
    <div class="container">
        <h1>צור קשר</h1>
        <p>נשמח לשמוע ממכם לכל שאלה על אפליקציות, שבוע-נושא והדרכות</p>

        <!-- קלפים עם פרטי התקשרות קצרים -->
        <div class="contact-grid">
            <div class="contact-card">
                <div class="icon">📍</div>
                <div>
                    <h3>כתובת</h3>
                    <p>אורי צבי גרינברג 9, תל אביב</p>
                </div>
            </div>
            <div class="contact-card">
                <div class="icon">📞</div>
                <div>
                    <h3>טלפון</h3>
                    <a href="tel:+972544684216">054-4684-216</a>
                </div>
            </div>
            <div class="contact-card">
                <div class="icon">✉️</div>
                <div>
                    <h3>דוא״ל</h3>
                    <a href="mailto:support@12trix.com">support@12trix.com</a>
                </div>
            </div>
        </div>

      
    </div>
</section>


    <div class="contact-form">
        <h2>השאירו פרטים ונחזור אליכם</h2>
        <p class="muted">לרוב חוזרים באותו היום.</p>



        <form id="leadForm" method="post" action="@Url.Action("SubmitLead","Schools")">
            @Html.AntiForgeryToken()

            <input type="hidden" name="Cta_Type" value="contact"> 
            <input type="hidden" name="Section" value="contact-parents"> 

            <div class="lead-grid">
                <label>
                    שם מלא *
                    <input name="Full_Name" required placeholder="שם פרטי ומשפחה">
                </label>

                <label>
                    תפקיד
                    <input name="Role" placeholder="רכז/ת מתמטיקה, מחנך/ת, מנהל/ת הורה,...">
                </label>

                <label>
                    שם בית ספר 
                    <input name="School_Name"  placeholder="שם בית הספר">
                </label>

                <label>
                    דוא״ל *
                <input name="Email" required type="email" placeholder="name@school.org">
                </label>

                <label>
                    טלפון
                    <input name="Phone" placeholder="05X-XXXXXXX">
                </label>

                <label style="grid-column:1/-1">
                    הודעה *
                <textarea name="Notes" required rows="4" placeholder="ספרו לנו מה חשוב לכם"></textarea>
                </label>
            </div>

            <!-- honeypot -->
            <input type="text" name="Website" id="leadWebsite" class="hp" tabindex="-1" autocomplete="off">

            <div class="lead-actions">
                <button type="submit" class="btn btn-primary">שליחה</button>
                <span id="leadMsg" class="lead-msg" aria-live="polite"></span>
            </div>
        </form>
    </div>


<div class="cta-container" style="margin-top:18px">
    <a class="btn-primary" href="https://wa.me/972544684216" target="_blank" rel="noopener">פתיחת ווטסאפ</a>
</div>

