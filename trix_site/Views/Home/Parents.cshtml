        .btn-info {
            background: var(--bg-light);
            color: var(--text-dark);
            border: 2px solid var(--text-gray);
            padding: 12px 24px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-info:hover {
                background: var(--text-gray);
                color: var(--white);
            }

        @@media (max-width: 768px) {
            .hero-content {
                grid-template-columns: 1fr;
            }

            .hero-text h1 {
                font-size: 36px;
            }

            .program-cards {
                grid-template-columns: 1fr;
            }
        }
</style>
