<style>
/* הרחבות ל-CSS קיים */
        .hero-parents {
            background: linear-gradient(135deg, #e8f5e9 0%, #FFFFFF 50%, #F7F8FA 100%);
            padding: 60px 0;
        }

        .hero-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .hero-text h1 {
            font-size: 52px;
            font-weight: 900;
            margin-bottom: 24px;
            line-height: 1.15;
        }

        .hero-features {
            list-style: none;
            margin: 32px 0;
        }

            .hero-features li {
                font-size: 20px;
                color: var(--text-dark);
                margin-bottom: 12px;
                padding-right: 30px;
                position: relative;
            }

                .hero-features li::before {
                    content: "✗";
                    position: absolute;
                    right: 0;
                    color: var(--red-plus);
                    font-weight: bold;
                    font-size: 24px;
                }

        .hero-image img {
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .trust-banner {
            background: linear-gradient(90deg, var(--green-primary), var(--blue-accent));
            color: var(--white);
            padding: 16px;
            text-align: center;
            font-size: 18px;
            font-weight: 600;
            margin: 40px 0;
        }

            .trust-banner .stars {
                color: #FFD700;
                margin: 0 10px;
            }

        .program-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin: 60px 0;
        }

        .program-card {
            background: var(--white);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: var(--shadow-card);
            transition: all 0.3s ease;
            position: relative;
        }

            .program-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            }

        .program-card-header {
            background: linear-gradient(135deg, var(--green-primary), var(--blue-accent));
            color: var(--white);
            padding: 24px;
            text-align: center;
        }

            .program-card-header h3 {
                font-size: 28px;
                font-weight: 800;
                margin-bottom: 8px;
                color: var(--text-dark);
            }

        .program-card-body {
            padding: 32px;
        }

